<%- include('./partials/head', {title:'Create a pokemon',script: 'createpoke' }) %>

    <body>
        <br><br><br><br><br><br><br><br><br><br><br><br>
        <div class="box">
        <h1>Création du pokemon de <i>
                <%= username %>
            </i> </h1>

        <p>Le total ne doit pas dépasser maximum de <span id="totmaxstat"></span> pour un maximum de <span id="maxstat"> </span> par statistiques</p>
        <form id="form" onchange="maxstat()" onsubmit="maxstat()">
            <div>
                <p id="err"></p>
                <br>
            </div>
            <input style="display: none;" type="text" name="username" value=<%= username %></input>

            <label>Nom</label>
            <input type="text" value="<%= pokemon %>" name="name" readonly></input>

            <label>Surnom</label>
            <input type="text" name="nomdonner"></input>

            <label>Description du pokémon</label>
            <input type="text" name="description"></input>

            <label>Pv</label>
            <input type="number" name="pv"></input>

            <label>Force</label>
            <input type="number" name="forcer"></input>

            <label>Defense</label>
            <input type="number" name="defense"></input>

            <label>vitesse</label>
            <input type="number" name="vitesse"></input>

            <label>Spéciale Attaque</label>
            <input type="number" name="specialatt"></input>

            <label>Spéciale Defense</label>
            <input type="number" name="specialdef"></input>

            <label>Spéciale Defense</label>
            <input type="number" name="specialdef"></input>

            <label>IvPv</label>
            <input type="number" class="iv" name="ivpv" min="0" max="31"></input>

            <label>IvForce</label>
            <input type="number" class="iv" name="ivforcer" min="0" max="31"></input>

            <label>IvDefense</label>
            <input type="number" class="iv" name="ivdefense" min="0" max="31"></input>

            <label>Ivvitesse</label>
            <input type="number" class="iv" name="ivvitesse" min="0" max="31"></input>

            <label>IvSpéciale Attaque</label>
            <input type="number" class="iv" name="ivspecialatt" min="0" max="31"></input>

            <label>IvSpéciale Defense</label>
            <input type="number" class="iv"name="ivspecialdef" min="0" max="31"></input>

            <label>IvSpéciale Defense</label>
            <input type="number" class="iv" name="ivspecialdef" min="0" max="31"></input>

            <label>EvPv</label>
            <input type="number" class="ev" name="evpv" min="0" max="252"></input>

            <label>EvForce</label>
            <input type="number" class="ev" name="evforcer" min="0" max="252"></input>

            <label>EvDefense</label>
            <input type="number" class="ev" name="evdefense" min="0" max="252"></input>

            <label>Evvitesse</label>
            <input type="number" class="ev" name="evvitesse" min="0" max="252"></input>

            <label>EvSpéciale Attaque</label>
            <input type="number" class="ev" name="evspecialatt" min="0" max="252"></input>

            <label>EvSpéciale Defense</label>
            <input type="number" class="ev" name="evspecialdef" min="0" max="252"></input>

            <label for="nature-select">Nature</label>

            <select name="nature" id="nature-select">
                <option value="1">Assuré</option>
                <option value="2">Bizzare</option>
                <option value="3">Brave</option>
                <option value="4">Calme</option>
                <option value="5">Docile</option>
                <option value="6">Doux</option>
                <option value="7">Foufou</option>
                <option value="8">Gentil</option>
                <option value="9">Hardi</option>
                <option value="10">Jovial</option>
                <option value="11">Lâche</option>
                <option value="12">Malin</option>
                <option value="13">Malpoli</option>
                <option value="14">Mauvais</option>
                <option value="15">Modeste</option>
                <option value="16">Naïf</option>
                <option value="17">Pressé</option>
                <option value="18">Prudent</option>
                <option value="19">Pudique</option>
                <option value="20">Relax</option>
                <option value="21">Rigide</option>
                <option value="22">Sérieux</option>
                <option value="23">Solo</option>
                <option value="24">Timide</option>

            </select>

            <input value="<%= sprite %>" name="sprite"></input>

            <input type="submit"></input>
        </form>
    </div>
    <div class="boxN1">
        <label for="contpoint">contpoint</label>
       <input id="contpoint" value="0" readonly></input>
    </div>

    </body>

    </html>